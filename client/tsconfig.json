{
    "compilerOptions": {
        "noImplicitAny": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": ["dom", "es2018"],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
